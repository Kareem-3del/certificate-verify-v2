<body class="bg-gray-100 flex  items-center justify-between flex-col min-h-screen">
<div class="container mx-auto p-8 mt-44">
  <h1 class="text-2xl font-bold text-gray-800 mb-6">Select the Certificate You Need</h1>
  <div class="grid grid-cols-2 sm:grid-cols-4 gap-4">
    <% for(let i = 0; i < settings.length; i++) {
      const isSubscribed = user.subscriptions.some(sub => sub.configId === settings[i].id);
      const isAdmin = user.role === 'admin';
      const buttonClass = isSubscribed || isAdmin ? 'hover:bg-red-600' : 'bg-gray-400 cursor-not-allowed';
      const buttonStyle = isSubscribed || isAdmin ? '#03242c' : '#d1d1d1';
    %>
    <button
            class="text-white py-2 px-4 rounded-sm transition duration-300 <%= buttonClass %>"
            style="background: <%= buttonStyle %>"
            onclick="<%= isSubscribed || isAdmin ? `location.href='/certificates/generate/${settings[i].id}'` : '' %>"
            <%= isSubscribed || isAdmin ? '' : 'disabled' %>
    >
      <%= settings[i].name %>
    </button>
    <% } %>
  </div>

</div>





