        <div class="bg-white mx-4 p-8 rounded shadow-md w-full md:w-1/2 lg:w-1/3">
            <h1 class="text-3xl font-bold mb-8 text-center">Forget Password</h1>
            <!-- Error Message -->
            <form method="post" action="/auth/forgot-password">
                <div class="mb-4">
                    <label class="block font-semibold text-gray-700 mb-2" for="email">
                        Email
                    </label>
                    <input
                            class="border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                            id="email" name="username" type="text" placeholder="Enter your email address" />
                </div>
                <div class="mb-6">
                    <button
                            style="background: #03242c"
                            class=" w-full hover:bg-black text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
                            type="submit">
                        Send Password to Email
                    </button>
                </div>
                <!-- Error Message (error)-->
                <% if (error) { %>
                    <p class="bg-red-500 text-white p-2 text-center rounded text-xs mb-2">
                        <%= error %>
                    </p>
                <% } %>
                <!-- Success Message (success)-->
                <% if (success) { %>
                    <p class="bg-green-500 p-2 text-center rounded text-white text-xs mb-2 ">
                        <%= success %>
                    </p>
                <% } %>
            </form>
            <!-- Forgot Password Link -->
            <div class="text-center">
                <a class="text-blue-500 hover:underline" href="/login">Login ?</a>
            </div>
        </div>
    </div>
</div>


