<header class="fixed top-0 w-full bg-white z-10">
    <nav class="border-bottom border-2 text-black">
        <div class="container mx-auto px-4 py-4">
            <div class="flex justify-between items-center">
                <a href="/" class="text-black font-bold">
                    <img alt="logo" class="h-24" src="https://static.heart.org/ahaecc/ecards/img/cpr-and-ecc-site-logo.png?">
                </a>
                <a href="/settings" class="text-white bg-red-700 rounded-full w-28 text-center p-1 hover:underline">Login</a>
            </div>
        </div>
    </nav>
</header>

<div class="bg-gray-100 flex items-center justify-center min-h-screen">
    <div class="bg-white p-8 rounded-lg shadow-lg max-w-md w-full text-center">
        <% if (notFound) { %>
            <h1 class="text-2xl font-bold text-red-500 mb-4">Certificate Not Found</h1>
            <p class="text-gray-700 mb-6">The certificate you are trying to verify does not exist.</p>
        <% } else { %>
            <h1 class="text-2xl font-bold text-gray-900 mb-6">Certificate Verification</h1>
            <div class="certificate-info mb-6 text-left p-4 border border-gray-300 rounded-lg bg-gray-50">
                <p class="mb-2"><strong>Name:</strong> <%= name ;%></p>
                <p><strong>Certificate ID:</strong> <%= id ;%></p>
            </div>
            <img src="<%= qr ;%>" alt="QR Code" class="mx-auto mb-6">
            <div class="footer text-sm text-gray-500">
                <p><a href="/certificates/download/<%= id ;%>" class="text-blue-500 hover:underline">Download
                        Certificate</a></p>
            </div>
        <% } %>
    </div>
</div>
